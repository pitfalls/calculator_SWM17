<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.calculator.Calculator">


    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignStart="@+id/button5"
        android:layout_alignTop="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignStart="@+id/button6"
        android:layout_alignTop="@+id/button8" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button9" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button5" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_alignBottom="@+id/buttonSub"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/buttonSub" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_above="@+id/buttonMul"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/button0"
        android:layout_alignTop="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_alignBottom="@+id/buttonMul"
        android:layout_alignStart="@+id/buttonEqual"
        android:layout_alignTop="@+id/buttonMul" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_above="@+id/buttonDiv"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp" />


    <Button
        android:id="@+id/buttonClear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="389dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="389dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonClear"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="389dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button0"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="389dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textSize="70sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</RelativeLayout>
