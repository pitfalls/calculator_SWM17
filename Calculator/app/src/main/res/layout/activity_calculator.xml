<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.sw2017.calculator.Calculator">

    <Button
        android:id="@+id/button_plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:text="+"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:text="9"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_div"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_0"
        android:layout_toEndOf="@+id/button_0"
        android:text="="
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_C"
        android:layout_alignTop="@+id/button_C"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/button_C"
        android:text="0"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_C"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_multi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_1"
        android:layout_alignParentEnd="true"
        android:text="*"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_2"
        android:layout_toEndOf="@+id/button_2"
        android:text="1"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_3"
        android:layout_alignStart="@+id/button_0"
        android:text="2"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_minus"
        android:layout_marginTop="26dp"
        android:text="3"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_4"
        android:layout_alignParentEnd="true"
        android:text="-"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_5"
        android:layout_toEndOf="@+id/button_5"
        android:text="4"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button_6"
        android:layout_alignStart="@+id/button_0"
        android:text="5"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_7"
        android:layout_marginTop="22dp"
        android:text="6"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button_acht" />

    <Button
        android:id="@+id/button_acht"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/button_0"
        android:layout_below="@+id/textView"
        android:text="8"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:text="0"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="4dp" />

</RelativeLayout>
